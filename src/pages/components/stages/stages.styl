stages__progress-bar_height = 0.4rem
stages__item_radius = 2.4rem

.stages
  display flex
  align-content center
  align-items center
  position relative

  &::before
    content ''
    display block
    padding-top stages__item_radius

  &__progress-bar
    height stages__progress-bar_height
    margin  0 stages__progress-bar_height
    background-color #e5e5e5
    flex-grow 1

  &__progress
    height stages__progress-bar_height
    background-color color-second
    width 0

  &__items
    display flex
    justify-content space-between
    position absolute
    left 0
    right 0

  &__item
    height stages__item_radius
    width stages__item_radius
    display flex
    justify-content center
    align-items center
    background-color #e5e5e5
    border-radius 50%
    font-family LatoBlack, sans-serif
    font-weight bold
    color #888888
    font-size 1rem

    &_completed
      background-color color-second
      color white