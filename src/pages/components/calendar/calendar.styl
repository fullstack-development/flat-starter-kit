.calendar
  border-radius 0.3rem
  overflow hidden

  &__day
    border none
    display block
    background-color color-second
    color white
    font-size 6.5rem
    font-family LatoLight, sans-serif
    width 100%
    text-align center
    padding-top 1.2rem

    &:focus
      outline none

  &__btn-today
    text-transform uppercase
    font-family LatoBlack, sans-serif
    font-weight bold
    font-size 1.2rem
    padding 1.35rem 1.7rem
    background-color #e5e5e5
    color #868686
    text-align left
    cursor pointer

    &:hover
      background-color #dddddd

  & &__widget .ui-datepicker
    width auto
    padding 0
    border none

    & .ui-datepicker-header
      border none
      border-radius 0
      padding 0
      background-color #d54c2c
      color white
      font-family LatoLight, sans-serif
      font-size 1.9rem
      font-weight normal
      padding-top 0.25rem

    & .ui-datepicker-year
      display none

    & .ui-datepicker-prev
      display flex
      justify-content center
      align-items center
      padding-right 0.2rem
      top 1px
      left 1px
      cursor pointer

      &.ui-datepicker-prev-hover
        background-color inherit
        border none
        border-radius 0

      & > *
        display none

      &::after
        content '\f104'
        display block
        font-family FontAwesome
        color white

    & .ui-datepicker-next
      display flex
      justify-content center
      align-items center
      padding-left 0.2rem
      top 1px
      right 1px
      cursor pointer

      &.ui-datepicker-next-hover
        background-color inherit
        border none
        border-radius 0

      & > *
        display none

      &::after
        content '\f105'
        display block
        font-family FontAwesome
        color white

    & .ui-datepicker-calendar
      margin 0


      & thead
        background-color color-second
        font-family LatoBlack, sans-serif
        font-weight bold
        color white
        text-transform uppercase
        font-size 0.8rem

        & th
          padding 0.7rem 0

      & tbody
        background-color #f2f2f2
        border-top 0.1rem solid white
        border-bottom  0.1rem solid white

        & td
          padding 0
          border 0.1rem solid white

        & td:first-child
          border-left none

        & td:last-child
          border-right none

    & .ui-state-default
      text-align center
      color #868686
      font-family SourceSansProRegular, sans-serif
      font-size 1.7rem
      border none
      padding 0.5rem 0.1rem

    & .ui-state-highlight
    & .ui-state-active
      border none
      background-color color-second
      color white